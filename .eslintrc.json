{
	"extends": ["eslint:recommended"],
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"rules": {
		"indent": "off",
		"no-mixed-spaces-and-tabs": "off",
		"no-console": "off"
	},
	"globals": {
		"console": true,
		"gsap": true,
		"ScrollTrigger": true,
		"SplitText": true
	}
}
